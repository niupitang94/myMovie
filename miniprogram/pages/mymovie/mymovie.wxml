<!--pages/mymovie/mymovie.wxml-->
<text>pages/mymovie/mymovie.wxml</text>
<view>
  <!-- 1：输入框输入你喜欢电影文字 -->
  <van-field 
  placeholder="写下你此时心情" 
  bind:change="onContextChange" 
  value="{{content}}"/>
  <!-- 2：按钮 上传图片 -->
  <van-button bindtap="myupload" type="primary" size="large">上传图片</van-button>
  <!-- 3：按钮 提交按钮 -->
  <view>
    <image src="{{list}}"></image>
  </view>
  <van-button type="danger" size="large" bindtap="mysubmit">提交</van-button>
</view>



