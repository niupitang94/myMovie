/* pages/mybodys/mybodys.wxss */
.detail-container {
  width:100%;
  height:400rpx;
  filter:blur(40rpx);
  opacity: .9
}
.detail-mask {
  width:100%;
  height:400rpx;
  position: absolute;
  top:0;
  background:#333;
  z-index:-1;
}
.detail-info {
  position: absolute;
  display: flex;
  top:0;
  left:0;
  width:100%;
  height:400rpx;
  padding:20rpx;
}
/*左侧大图*/
.detail-img {
  width:280rpx;  /*大图宽度*/
  height:90%;   /*大图高度*/
  margin-right:24rpx;/*与右侧文字间距*/
}
/*右侧区域*/
.detail {
  flex-grow:1;/*文字占满剩余空间*/
  line-height:60rpx;/*行高*/
  color:#fff; /*文字颜色*/
  font-size:24rpx;/*文字大小*/
}
.detail-title {
  font-size:40rpx;
}
/* 评分样式 */
.detail-sc {
  color:#fc0; /*橙色评分样式*/
  font-size:36rpx;/*文字大小*/
}
/*电影描述*/
.desc {
 padding:20rpx;  /*内边距*/
 font-size:24rpx;
 color:#555;
}
.img {
  width:100rpx;
  height:100rpx;
}